<%- include('partials/header') -%>

    <h1>Compose</h1>

    <form action="/compose" method="post">

        <div class="mb-3">
            <label for="title" class="form-label">Title</label>
            <input type="text" class="form-control" id="title" name="postTitle">
        </div>
        <div class="mb-3">
            <label for="post-content" class="form-label">Post</label>
            <textarea class="form-control" id="post-content" rows="3" name="postContent"></textarea>
        </div>
        <button type="submit" class="btn btn-primary mb-3">Publish</button>
    </form>


    <%- include('partials/footer') -%>